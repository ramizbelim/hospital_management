<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="school_class_form_view" model="ir.ui.view">
        <field name="name">Patient Record</field>
        <field name="model">hospital.hospital</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="onchange_button_action" string="Test Button" class="oe_highlight" type="object" icon="fa-share-square" confirm="Are you sure to click the button ?"/>
                    <button name="button_action_second" string="Second Button" class="oe_highlight" type="object" icon="fa-asterisk"/>
                    <button name="%(action_patient)d" string="Action" type="action" class="oe_stat_button" icon="fa-cut"/>
                    <button name="%(action_department)d" string="Action" type="action" class="oe_stat_button" icon="fa-crop"/>
<!--                    <button string="Open View" class="oe_highlight" type="object" name="button_open_view"/>-->

                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="button_action_second" type="object" class="oe_stat_button" icon="fa-code">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Customer</span>
                                <span class="o_stat_text">Testing</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <field name="patient_id"/>
                        <field name="dob"/>
                        <field name="age"/>
                        <field name="mobile"/>
                        <field name="address"/>
                        <field name="child"/>
                        <field name="gender"/>
                        <field name="partner_id"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name="patient_entry_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="school_class_tree_view" model="ir.ui.view">
        <field name="name">Patient Record tree</field>
        <field name="model">hospital.hospital</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="dob"/>
                <field name="age"/>
                <field name="mobile"/>
                <field name="address"/>
                <field name="child"/>
                <field name="gender"/>
                <field name="partner_id"/>
                <field name="tag_ids"/>
            </tree>
        </field>
    </record>


    <record id="view_patient_data_calendar" model="ir.ui.view">
        <field name="name">hospital.hospital.calendar</field>
        <field name="model">hospital.hospital</field>
        <field name="arch" type="xml">
            <calendar string="Patient Records">
                <field name="patient_id"/>
                <field name="dob"/>
                <field name="address"/>
<!--                <field name="mobile"/>-->
                <field name="child"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="partner_id"/>
                <field name="tag_ids"/>
            </calendar>
        </field>
    </record>

    <record id="view_sale_order_graph" model="ir.ui.view">
        <field name="name">hospital.hospital.graph</field>
        <field name="model">hospital.hospital</field>
        <field name="arch" type="xml">
            <graph string="Patient Records" sample="1">
                <field name="age"/>
                <field name="child" type="measure"/>
                <field name="tag_ids" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_sale_order_pivot" model="ir.ui.view">
        <field name="name">hospital.hospital.pivot</field>
        <field name="model">hospital.hospital</field>
        <field name="arch" type="xml">
            <pivot string="Patient Records" sample="1">
                <field name="patient_id" type="row"/>
                <field name="child"/>
                <field name="tag_ids"/>

            </pivot>
        </field>
    </record>

    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.hospital</field>
        <field name="view_mode">tree,form,kanban,pivot,graph</field>
    </record>

    <record id="action_website" model="ir.actions.act_url">
        <field name="name">google</field>
        <field name="url">www.google.com</field>
        <field name="target">self</field>
    </record>

